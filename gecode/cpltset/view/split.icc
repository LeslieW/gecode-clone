  /*
   * Domain tests
   *
   */

  forceinline bool
  SplitCpltSetView::assigned(void)  const { 
    BMI* mgr = manager();
    return !mgr->ctrue(bounds) && mgr->ctrue(remain); 
  }

  forceinline bool
  SplitCpltSetView::contains(int i) const { 
    BMI* mgr = manager();
    int idx = base().variable()->valididx(i);
    if (mgr->ctrue(bounds)) { return false; }
    GecodeBdd bv = getnegbdd(idx);
    return (mgr->cfalse(bounds & bv));
  }
  
  forceinline bool
  SplitCpltSetView::notContains(int i) const { 
    BMI* mgr = manager();
    int idx = base().variable()->valididx(i);
    if (mgr->ctrue(bounds)) { return false; }
    GecodeBdd bv = getbdd(idx);
    return (mgr->cfalse(bounds & bv));
  }

