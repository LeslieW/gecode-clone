  } 
 
  template <class View>
  size_t
  NaryBddProp<View>::dispose(Space* home) {
    unforce(home);
    // std::cout << "dispose propagator\n";
    if (!home->failed()) {
      for (int i = x.size(); i--;) {
        x[i].cancel(home, this, PC_CPLTSET_DOM);
      }
    }
    manager.dispose(d);
    Propagator::dispose(home);
    return sizeof(*this);
  }

