  template <class View>
  forceinline ExecStatus
  NaryBddProp<View>::propagate_eeq(Space* home) {
    int n = x.size();
    for (int i = 0; i < n; i++) {
      ModEvent me;
      bdd xphi = phi(i, n - 1);
      me = x[i].tell_formula(home, xphi);
      if (me_failed(me)) {
        return ES_FAILED;
      }
    }
    return ES_FIX;
  }

  template <class View>
  forceinline ExecStatus
  NaryBddProp<View>::propagate_bnd_eeq(Space* home) {
    int n = x.size();

    // compute \f$\phi_n\f$
    bdd xphi_n = bnd_phi(n - 1);

    if (xphi_n == bdd_false()) {
      std::cout << "xphi_n = bot\n";
      return ES_FAILED;
    }

    //  compute the fixed variables of \f$\phi_n\f$, 
    //  \f$\lbracket\phi_n\rbracketf$, 
    bdd conv_hull_xphi = bdd_true();
    conv_hull(xphi_n, conv_hull_xphi);
    // std::cout << "conv_xphi_n = " << conv_hull_xphi << "\n";
    // manager.bdd2dot(conv_hull_xphi);

    // project on x_i
    for (int i = 0; i < n; i++) {
      ModEvent me;

      int s = 0;     
      for (int j = 0; j < n; j++) {
        if (j != i) {
          s += x[j].table_width();
        }
      }
      // collect all bdd nodes that have to be projected out
      int c = 0;     
      GECODE_AUTOARRAY(int, var, s);
      for (int j = 0; j < n; j++) {
        if (j != i) {
          int o = x[j].offset();
          int w = x[j].table_width();
          for (int k = o; k < o + w; k++, c++) {
            var[c] = k;
          }
        }
      }

      // me = x[i].tell_project(home, conv_hull_xphi, &var[0], s);
      bdd proj = manager.eliminate(conv_hull_xphi, &var[0], s);
      me = x[i].tell_formula(home, proj);
      if (me_failed(me)) {
        std::cout << "tell formula failed\n";
        return ES_FAILED;
      }
    }

    // after propgation update B(C)
    // ensures that the fixed parts of all variables have been projected out
    if (!manager.ctrue(xphi_n)) {
      // strongly depends on update rule
      d = xphi_n;
      

// //       bdd hull_proj = conv_project(mgr, xphi_n);
// //       d = manager.eliminate(d, hull_proj);
    }
    // std::cout << "new constraint description\n";
//     manager.bdd2dot(d);


    bool assigned = true;
    for (int i = n; i--; ) {
      assigned &= x[i].assigned();
    }

    if (assigned) {
      std::cout << "ES_SUBSUMED\n";
      return ES_SUBSUMED(this, home);
    }

    std::cout << "ES_FIX\n";
    return ES_FIX;
  }

  template <class View>
  forceinline ExecStatus
  NaryBddProp<View>::propagate_bnd_ddc(Space* home) {
    // std::cout << "propagate_ddc\n";

    bool assigned = true;
    int n = x.size();

    // std::cout << "divide_conquer_conv...";
    ExecStatus es = ES_OK;

    bdd fixed = bdd_true();
    for (int i = 0; i < n; i++) {
      bdd dom = x[i].bdd_domain();
      bdd fp  = bdd_true();
      conv_project(dom, fp);
      fixed &= fp;
      manager.eliminate(d, fp);
    }

    assigned = true;
    for (int i = n; i--; ) {
      assigned &= x[i].assigned();
    }
    if (assigned) {
      return ES_SUBSUMED(this, home);
    } 
    return ES_FIX;
  }

