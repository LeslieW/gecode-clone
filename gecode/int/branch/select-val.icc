namespace Gecode { namespace Int { namespace Branch {

  template<class View>
  forceinline int
  ValMin<View>::val(const Space*, View x) const {
    return x.min();
  }
  template<class View>
  forceinline ModEvent
  ValMin<View>::tell(Space* home, unsigned int a, View x, int n) {
    return (a == 0) ? x.eq(home,n) : x.gr(home,n);
  }
  template<class View>
  forceinline Reflection::Type*
  ValMin<View>::type(void) {
    return new Reflection::Type("int.ValMin");
  }


  template<class View>
  forceinline int
  ValMed<View>::val(const Space*, View x) const {
    return x.med();
  }
  template<class View>
  forceinline ModEvent
  ValMed<View>::tell(Space* home, unsigned int a, View x, int n) {
    return (a == 0) ? x.eq(home,n) : x.nq(home,n);
  }
  template<class View>
  forceinline Reflection::Type*
  ValMed<View>::type(void) {
    return new Reflection::Type("int.ValMed");
  }


  template<class View>
  forceinline int
  ValMax<View>::val(const Space*, View x) const {
    return x.max();
  }
  template<class View>
  forceinline ModEvent
  ValMax<View>::tell(Space* home, unsigned int a, View x, int n) {
    return (a == 0) ? x.eq(home,n) : x.le(home,n);
  }
  template<class View>
  forceinline Reflection::Type*
  ValMax<View>::type(void) {
    return new Reflection::Type("int.ValMax");
  }


  template<class View>
  forceinline int
  ValSplitMin<View>::val(const Space*, View x) const {
    return (x.width() == 2) ? x.min() : ((x.min()+x.max()) / 2);
  }
  template<class View>
  forceinline ModEvent
  ValSplitMin<View>::tell(Space* home, unsigned int a, View x, int n) {
    return (a == 0) ? x.lq(home,n) : x.gr(home,n);
  }
  template<class View>
  forceinline Reflection::Type*
  ValSplitMin<View>::type(void) {
    return new Reflection::Type("int.ValSplitMin");
  }


  template<class View>
  forceinline int
  ValSplitMax<View>::val(const Space*, View x) const {
    return (x.width() == 2) ? x.min() : ((x.min()+x.max()) / 2);
  }
  template<class View>
  forceinline ModEvent
  ValSplitMax<View>::tell(Space* home, unsigned int a, View x, int n) {
    return (a == 0) ? x.gr(home,n) : x.lq(home,n);
  }
  template<class View>
  forceinline Reflection::Type*
  ValSplitMax<View>::type(void) {
    return new Reflection::Type("int.ValSplitMax");
  }


  template<class View, template <class> class SelView>
  void
  create(Space* home, ViewArray<View>& x, BvalSel vals) {
    switch (vals) {
    case BVAL_MIN:
      (void) new (home) 
        ViewValBranching<View,int,SelView<View>,ValMin<View> >(home,x);
      break;
    case BVAL_MED:
      (void) new (home) 
        ViewValBranching<View,int,SelView<View>,ValMed<View> >(home,x);
      break;
    case BVAL_MAX:
      (void) new (home) 
        ViewValBranching<View,int,SelView<View>,ValMax<View> >(home,x);
      break;
    case BVAL_SPLIT_MIN:
      (void) new (home)
        ViewValBranching<View,int,SelView<View>,ValSplitMin<View> >(home,x);
      break;
    case BVAL_SPLIT_MAX:
      (void) new (home)
        ViewValBranching<View,int,SelView<View>,ValSplitMax<View> >(home,x);
      break;
    default:
      throw UnknownBranching("Int::branch");
    }
  }

  forceinline
  Reflection::Type* NoValue::type(void) {
    return new Reflection::Type("int.NoValue");
  }

  template<class View>
  forceinline NoValue
  ValZeroOne<View>::val(const Space*, View) const {
    NoValue n; return n;
  }
  template<class View>
  forceinline ModEvent
  ValZeroOne<View>::tell(Space* home, unsigned int a, View x, NoValue) {
    return (a == 0) ? x.zero(home) : x.one(home);
  }
  template<class View>
  forceinline Reflection::Type*
  ValZeroOne<View>::type(void) {
    return new Reflection::Type("int.ValZeroOne");
  }


  template<class View>
  forceinline NoValue
  ValOneZero<View>::val(const Space*, View) const {
    NoValue n; return n;
  }
  template<class View>
  forceinline ModEvent
  ValOneZero<View>::tell(Space* home, unsigned int a, View x, NoValue) {
    return (a == 0) ? x.one(home) : x.zero(home);
  }
  template<class View>
  forceinline Reflection::Type*
  ValOneZero<View>::type(void) {
    return new Reflection::Type("int.ValOneZero");
  }


