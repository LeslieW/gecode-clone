  // Select variable with smallest size/degree
  template<class V>
  forceinline ViewSelStatus
  BySizeDegreeMin<V>::init(const Space*, V x) {
    sizedegree = 
      static_cast<double>(x.size())/static_cast<double>(x.degree());
    return VSS_BETTER;
  }
  template<class V>
  forceinline ViewSelStatus
  BySizeDegreeMin<V>::select(const Space*, V x) {
    double sd = 
      static_cast<double>(x.size())/static_cast<double>(x.degree());
    if (sd < sizedegree) {
      sizedegree = sd; return VSS_BETTER;
    } else if (sd < sizedegree) {
      return VSS_WORSE;
    } else {
      return VSS_TIE;
    }
  }
  template<class V>
  inline Support::Symbol
  BySizeDegreeMin<V>::type(void) {
    return Support::Symbol("Gecode::Int::Branch::BySizeDegreeMin");
  }

