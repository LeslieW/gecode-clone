  // Select variable with smallest degree (and smallest size in case of ties)
  template<class V>
  forceinline ViewSelStatus
  ByDegreeMin<V>::init(const Space*, V x) {
    degree = x.degree(); size = x.size();
    return VSS_BETTER;
  }
  template<class V>
  forceinline ViewSelStatus
  ByDegreeMin<V>::select(const Space*, V x) {
    if (x.degree() < degree) {
      degree = x.degree();
      size   = x.size();
      return VSS_BETTER;
    } else if ((x.degree() == degree) && (x.size() < size)) {
      size = x.size();
      return VSS_BETTER;
    } else if ((x.degree() == degree) && (x.size() == size)) {
      return VSS_TIE;
    } else {
      return VSS_WORSE;
    }
  }
  template<class V>
  inline Support::Symbol
  ByDegreeMin<V>::type(void) {
    return Support::Symbol("Gecode::Int::Branch::ByDegreeMin");
  }

