namespace Gecode { namespace Int { namespace Branch {

  // Select first variable
  template<class V>
  forceinline ViewSelStatus
  ByNone<V>::init(const Space*, V) {
    return VSS_BEST;
  }
  template<class V>
  forceinline ViewSelStatus
  ByNone<V>::select(const Space*, V) {
    GECODE_NEVER;
    return VSS_TIE;
  }
  template<class V>
  inline Support::Symbol
  ByNone<V>::type(void) {
    return Support::Symbol("Gecode::Int::Branch::ByNone");
  }

  // Select variable with smallest min
  template<class V>
  forceinline ViewSelStatus
  ByMinMin<V>::init(const Space*, V x) {
    min = x.min();
    return VSS_BETTER;
  }
  template<class V>
  forceinline ViewSelStatus
  ByMinMin<V>::select(const Space*, V x) {
    if (x.min() < min) {
      min = x.min(); return VSS_BETTER;
    } else if (x.min() > min) {
      return VSS_WORSE;
    } else {
      return VSS_TIE;
    }
  }
  template<class V>
  inline Support::Symbol
  ByMinMin<V>::type(void) {
    return Support::Symbol("Gecode::Int::Branch::ByMinMin");
  }

