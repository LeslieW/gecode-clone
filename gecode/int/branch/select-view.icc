  // Select variable with smallest min-regret
  template<class V>
  forceinline ViewSelStatus
  ByRegretMinMin<V>::init(const Space*, V x) {
    regret = x.regret_min();
    return (regret == 1) ? VSS_BEST : VSS_BETTER;
  }
  template<class V>
  forceinline ViewSelStatus
  ByRegretMinMin<V>::select(const Space*, V x) {
    if (x.regret_min() < regret) {
      regret = x.regret_min();
      return (regret == 1) ? VSS_BEST : VSS_BETTER;
    } else if (x.regret_min() > regret) {
      return VSS_WORSE;
    } else {
      return VSS_TIE;
    }
  }
