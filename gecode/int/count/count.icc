  template <class VX, class VY, class VZ, bool shr>
  ExecStatus
  Gq<VX,VY,VZ,shr>::propagate(Space* home) {
    for (int i = x.size(); i--; )
      switch (holds(x[i],y)) {
      case RT_FALSE:
	x.move_lst(i,home,this,PC_INT_DOM);
	if (z.min() == atmost()) goto decided;
	break;
      case RT_TRUE:
	x.move_lst(i,home,this,PC_INT_DOM); c++;
	break;
      case RT_MAYBE:
	break;
      default: GECODE_NEVER;
      }
  decided:
    GECODE_ME_CHECK(z.lq(home,atmost()));

    if (z.min() == atmost())
      return post_true(home,x,y);
    if (x.size() == 0)
      return ES_SUBSUMED;
    return shr ? ES_NOFIX : ES_FIX;
  }

