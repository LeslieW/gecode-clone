namespace Gecode { namespace Int { namespace Count {

  /*
   * General baseclass
   *
   */

  template <class VX, class VY, class VZ, bool shr>
  Base<VX,VY,VZ,shr>::Base(Space* home, 
			       ViewArray<VX>& x0, VY y0, VZ z0, int c0)
    : Propagator(home), x(x0), y(y0), z(z0), c(c0) {
    x.subscribe(home,this,PC_INT_DOM);
    y.subscribe(home,this,PC_INT_DOM);
    z.subscribe(home,this,PC_INT_BND);
  }

  template <class VX, class VY, class VZ, bool shr>
  inline
  Base<VX,VY,VZ,shr>::Base(Space* home, bool share,
			       Base<VX,VY,VZ,shr>& p)
    : Propagator(home,shr,p), c(p.c) {
    x.update(home,share,p.x);
    y.update(home,share,p.y);
    z.update(home,share,p.z);
  }

  template <class VX, class VY, class VZ, bool shr>
  PropCost
  Base<VX,VY,VZ,shr>::cost(void) const {
    return cost_lo(x.size()+1, PC_LINEAR_LO);
  }

  template <class VX, class VY, class VZ, bool shr>
  size_t
  Base<VX,VY,VZ,shr>::dispose(Space* home) {
    assert(!home->failed());
    x.cancel(home,this,PC_INT_DOM);
    y.cancel(home,this,PC_INT_DOM);
    z.cancel(home,this,PC_INT_BND);
    (void) Propagator::dispose(home);
    return sizeof(*this);
  }

  template <class VX, class VY, class VZ, bool shr>
  forceinline int
  Base<VX,VY,VZ,shr>::atleast(void) const {
    return c;
  }

  template <class VX, class VY, class VZ, bool shr>
  forceinline int
  Base<VX,VY,VZ,shr>::atmost(void) const {
    return c+x.size();
  }

  template <class VX, class VY, class VZ, bool shr>
  inline bool
  Base<VX,VY,VZ,shr>::sharing(const ViewArray<VX>& x,
			      const VY& y, const VZ& z) {
    if (shared(y,z))
      return true;
    for (int i = x.size(); i--; )
      if (shared(x[i],z))
	return true;
    return false;
  }

  /*
   * Equality
   *
   */

  template <class VX, class VY, class VZ, bool shr>
  forceinline
  Eq<VX,VY,VZ,shr>::Eq(Space* home, 
			       ViewArray<VX>& x, VY y, VZ z, int c)
    : Base<VX,VY,VZ,shr>(home,x,y,z,c) {}

  template <class VX, class VY, class VZ, bool shr>
  ExecStatus
  Eq<VX,VY,VZ,shr>::post(Space* home, 
				ViewArray<VX>& x, VY y, VZ z, int c) {
    if (sharing(x,y,z))
      (void) new (home) Eq<VX,VY,VZ,true>(home,x,y,z,c);
    else
      (void) new (home) Eq<VX,VY,VZ,false>(home,x,y,z,c);
    return ES_OK;
  }

  template <class VX, class VY, class VZ, bool shr>
  forceinline
  Eq<VX,VY,VZ,shr>::Eq(Space* home, bool share,
			       Eq<VX,VY,VZ,shr>& p)
    : Base<VX,VY,VZ,shr>(home,share,p) {}

  template <class VX, class VY, class VZ, bool shr>
  Actor*
  Eq<VX,VY,VZ,shr>::copy(Space* home, bool share) {
    return new (home) Eq<VX,VY,VZ,shr>(home,share,*this);
  }

  template <class VX, class VY, class VZ, bool shr>
  ExecStatus
  Eq<VX,VY,VZ,shr>::propagate(Space* home) {
    for (int i = x.size(); i--; )
      switch (holds(x[i],y)) {
      case RT_FALSE:
	x.move_lst(i,home,this,PC_INT_DOM);
	if (z.min() == atmost()) goto decided;
	break;
      case RT_TRUE:
	x.move_lst(i,home,this,PC_INT_DOM); c++;
	if (z.max() == atleast()) goto decided;
	break;
      case RT_MAYBE:
	break;
      default: GECODE_NEVER;
      }
  decided:
    GECODE_ME_CHECK(z.gq(home,atleast()));
    GECODE_ME_CHECK(z.lq(home,atmost()));

    if (z.assigned()) {
      if (z.val() == atleast()) 
	return post_false(home,x,y);
      if (z.val() == atmost())  
	return post_true(home,x,y);
    }
    return shr ? ES_NOFIX : ES_FIX;
  }




  /*
   * Disequality
   *
   */

  template <class VX, class VY, class VZ, bool shr>
  forceinline
  Nq<VX,VY,VZ,shr>::Nq(Space* home, 
			       ViewArray<VX>& x, VY y, VZ z, int c)
    : Base<VX,VY,VZ,shr>(home,x,y,z,c) {}

  template <class VX, class VY, class VZ, bool shr>
  ExecStatus
  Nq<VX,VY,VZ,shr>::post(Space* home, 
			     ViewArray<VX>& x, VY y, VZ z, int c) {
    (void) new (home) Nq<VX,VY,VZ,shr>(home,x,y,z,c);
    return ES_OK;
  }

  template <class VX, class VY, class VZ, bool shr>
  forceinline
  Nq<VX,VY,VZ,shr>::Nq(Space* home, bool share,
			       Nq<VX,VY,VZ,shr>& p)
    : Base<VX,VY,VZ,shr>(home,share,p) {}

  template <class VX, class VY, class VZ, bool shr>
  Actor*
  Nq<VX,VY,VZ,shr>::copy(Space* home, bool share) {
    return new (home) Nq<VX,VY,VZ,shr>(home,share,*this);
  }

  template <class VX, class VY, class VZ, bool shr>
  ExecStatus
  Nq<VX,VY,VZ,shr>::propagate(Space* home) {
    for (int i = x.size(); i--; )
      switch (holds(x[i],y)) {
      case RT_FALSE:
	x.move_lst(i,home,this,PC_INT_DOM); break;
      case RT_TRUE:
	x.move_lst(i,home,this,PC_INT_DOM); c++; break;
      case RT_MAYBE:
	break;
      default: GECODE_NEVER;
      }
    if (atleast() == atmost()) {
      GECODE_ME_CHECK(z.nq(home,atleast()));
      return ES_SUBSUMED;
    }
    if (z.max() < atleast())
      return ES_SUBSUMED;
    if (z.min() > atmost())
      return ES_SUBSUMED;
    return ES_FIX;
  }



  /*
   * Less or equal
   *
   */

  template <class VX, class VY, class VZ, bool shr>
  forceinline
  Lq<VX,VY,VZ,shr>::Lq(Space* home, 
			       ViewArray<VX>& x, VY y, VZ z, int c)
    : Base<VX,VY,VZ,shr>(home,x,y,z,c) {}

  template <class VX, class VY, class VZ, bool shr>
  ExecStatus
  Lq<VX,VY,VZ,shr>::post(Space* home, 
			     ViewArray<VX>& x, VY y, VZ z, int c) {
    if (sharing(x,y,z))
      (void) new (home) Lq<VX,VY,VZ,true>(home,x,y,z,c);
    else
      (void) new (home) Lq<VX,VY,VZ,false>(home,x,y,z,c);
    return ES_OK;
  }
  
  template <class VX, class VY, class VZ, bool shr>
  forceinline
  Lq<VX,VY,VZ,shr>::Lq(Space* home, bool share,
			       Lq<VX,VY,VZ,shr>& p)
    : Base<VX,VY,VZ,shr>(home,share,p) {}
  
  template <class VX, class VY, class VZ, bool shr>
  Actor*
  Lq<VX,VY,VZ,shr>::copy(Space* home, bool share) {
    return new (home) Lq<VX,VY,VZ,shr>(home,share,*this);
  }

  template <class VX, class VY, class VZ, bool shr>
  ExecStatus
  Lq<VX,VY,VZ,shr>::propagate(Space* home) {
    for (int i = x.size(); i--; )
      switch (holds(x[i],y)) {
      case RT_FALSE:
	x.move_lst(i,home,this,PC_INT_DOM); break;
      case RT_TRUE:
	x.move_lst(i,home,this,PC_INT_DOM); c++;
	if (z.max() == atleast()) goto decided;
	break;
      case RT_MAYBE:
	break;
      default: GECODE_NEVER;
      }
  decided:
    GECODE_ME_CHECK(z.gq(home,atleast()));
    if (z.max() == atleast())
      return post_false(home,x,y);
    if (x.size() == 0)
      return ES_SUBSUMED;
    return shr ? ES_NOFIX : ES_FIX;
  }



