  template <class View>
  ExecStatus
  GqBoolInt<View>::propagate(Space* home) {
    // Eliminate assigned views from subscribed views
    int n_x = x.size();
    for (int i=n_s; i--; )
      if (x[i].zero()) {
	x[i]=x[--n_s]; x[n_s]=x[--n_x];
      } else if (x[i].one()) {
	x[i]=x[--n_s]; x[n_s]=x[--n_x]; c--;
      }
    // Eliminate assigned views from unsubscribed views
    for (int i=n_x; i-- > n_s; )
      if (x[i].zero()) {
	x[i] = x[--n_x];
      } else if (x[i].one()) {
	x[i] = x[--n_x]; c--;
      }
    x.size(n_x);
    if (n_x < c)
      return ES_FAILED;
    if (c <= 0)
      return ES_SUBSUMED;
    if (c == n_x) {
      // Fix number of subscriptions such that cancelling subscriptions work
      n_s = 0;
      for (int i=n_x; i--; )
	x[i].t_one_none(home);
      return ES_SUBSUMED;
    }
    if (n_s < c+1) {
      // Now, there must be new subscriptions from x[n_s] up to x[c]
      for (int i=n_s; i<c+1; i++)
	x[i].subscribe(home,this,PC_INT_VAL);
      n_s = c+1;
    }
    return ES_FIX;
  }



  /*
   * Base-class
   *
   */
  template <class View>
  LinBool<View>::LinBool(Space* home, ViewArray<BoolView>& x0, int n0, View y0)
    :  Propagator(home), x(x0), n(n0), y(y0) {
    x.subscribe(home,this,PC_INT_VAL);
    y.subscribe(home,this,PC_INT_BND);
  }

  template <class View>
  size_t
  LinBool<View>::dispose(Space* home) {
    assert(!home->failed());
    x.cancel(home,this,PC_INT_VAL);
    y.cancel(home,this,PC_INT_BND);
    (void) Propagator::dispose(home);
    return sizeof(*this);
  }

  template <class View>
  forceinline
  LinBool<View>::LinBool(Space* home, bool share, LinBool& p)
    : Propagator(home,share,p), n(p.n) {
    x.update(home,share,p.x);
    y.update(home,share,p.y);
  }

  template <class View>
  PropCost
  LinBool<View>::cost(void) const {
    return cost_lo(x.size(),PC_LINEAR_LO);
  }

  template <class View>
  void
  LinBool<View>::eliminate(void) {
    int e = 0;
    int m = x.size();
    for (int i = m; i--; )
      if (x[i].assigned()) {
	e+=x[i].val(); x[i]=x[--m];
      }
    x.size(m);
    n -= e;
  }

  template <class View>
  void
  LinBool<View>::all_one(Space* home) {
    for (int i = x.size(); i--; )
      x[i].t_one_none(home);
  }

  template <class View>
  void
  LinBool<View>::all_zero(Space* home) {
    for (int i = x.size(); i--; )
      x[i].t_zero_none(home);
  }


  /*
   * Equality propagator
   *
   */
  template <class View>
  forceinline
  EqBool<View>::EqBool(Space* home, ViewArray<BoolView>& x, int n, View y)
    : LinBool<View>(home,x,n,y) {}

  template <class View>
  ExecStatus
  EqBool<View>::post(Space* home, ViewArray<BoolView>& x, int n, View y) {
    (void) new (home) EqBool<View>(home,x,n,y);
    return ES_OK;
  }

  template <class View>
  forceinline
  EqBool<View>::EqBool(Space* home, bool share, EqBool<View>& p)
    : LinBool<View>(home,share,p) {}

  template <class View>
  Actor*
  EqBool<View>::copy(Space* home, bool share) {
    return new (home) EqBool<View>(home,share,*this);
  }

  template <class View>
  ExecStatus
  EqBool<View>::propagate(Space* home) {
    this->eliminate();
    GECODE_ME_CHECK(y.lq(home,x.size() - n));
    GECODE_ME_CHECK(y.gq(home,-n));
    if (x.size() == 0)
      return ES_SUBSUMED;
    if (y.min()+n == x.size()) {
      assert(y.assigned());
      this->all_one(home); return ES_SUBSUMED;
    }
    if (y.max()+n == 0) {
      assert(y.assigned());
      this->all_zero(home); return ES_SUBSUMED;
    }
    return ES_FIX;
  }


