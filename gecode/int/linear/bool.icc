  template <class View>
  ExecStatus
  GqBool<View>::propagate(Space* home) {
    this->eliminate();
    GECODE_ME_CHECK(y.lq(home,x.size() - n));
    if (-n >= y.max())
      return ES_SUBSUMED;
    if (y.min()+n == x.size()) {
      this->all_one(home); return ES_SUBSUMED;
    }
    return ES_FIX;
  }

