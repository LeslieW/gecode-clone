  mangle(Support::Symbol name) {
    return name + "<" + TypeOf<View0>::t()
         + "," + TypeOf<View1>::t()
         + "," + TypeOf<View2>::t()
         + "," + TypeOf<View3>::t() + ">";
  }
  /// Mangle name with type information
  template <class View0, class View1, class View2, bool b>
  Support::Symbol
