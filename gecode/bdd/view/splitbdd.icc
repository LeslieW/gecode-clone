  forceinline
  SplitBddView::SplitBddView(void) {}

  forceinline
  SplitBddView::~SplitBddView(void)  {
    manager()->dispose(bounds);
    manager()->dispose(remain);
  }

  forceinline
  SplitBddView::SplitBddView(const BddView& x) 
    : DerivedViewBase<BddView>(x) {
    GecodeBdd d = view.bdd_domain();
    BMI* mgr = manager();
    bounds.init();
    remain.init();
    bounds = BDDTOP;
    remain = BDDTOP;
    if (!mgr->ctrue(d)) {
//       bounds  = conv_hull(mgr, d);
//       GecodeBdd bvars = conv_project(mgr, bounds);
      GecodeBdd bvars = BDDTOP;
      conv_hull_project(mgr, d, bounds, bvars);
      remain = mgr->eliminate(d, bvars);
    }
  }

  forceinline void
  SplitBddView::init(const BddView& x) {
    view = x; 
    GecodeBdd d = view.bdd_domain();
    BMI* mgr = manager();
    bounds.init();
    remain.init();
    bounds = BDDTOP;
    remain = BDDTOP;
    if (!mgr->ctrue(d)) {
//       bounds  = conv_hull(mgr, d);
//       GecodeBdd bvars = conv_project(mgr, bounds);
//       remain = mgr->eliminate(d, bvars);
      GecodeBdd bvars = BDDTOP;
      conv_hull_project(mgr, d, bounds, bvars);
      remain = mgr->eliminate(d, bvars);
    }
  }


  /* 
   * Set information
   *
   */
  
  forceinline unsigned int
  SplitBddView::glbSize(void) const { 
    BMI* mgr = manager();
    if (mgr->ctrue(bounds)) { return 0; }
    BddIterator iter(mgr, bounds);
    int size = 0;
    while (iter()) {
      if (iter.status() == FIX_GLB) { size++; }
      ++iter;
    }
    return size;
  }

  forceinline unsigned int
  SplitBddView::lubSize(void) const { 
    BMI* mgr = manager();
    if (mgr->ctrue(bounds) && 
	mgr->ctrue(remain)) { return table_width(); }
    BddIterator iter(mgr, bounds);
    int out = 0;
    while (iter()) {
      if (iter.status() == FIX_NOT_LUB) { out++; }
      ++iter;
    }
    return table_width() - out;
  }

  forceinline unsigned int
  SplitBddView::unknownSize(void) const {
    BMI* mgr = manager();
    int size = table_width();
    if (mgr->ctrue(bounds)) { return size; }
    BddIterator iter(mgr, bounds);
    while (iter()) {
      NodeStatus status = iter.status();
      if (status == FIX_GLB || status == FIX_NOT_LUB) { size--; }
      ++iter;
    }
    return size;
  };

